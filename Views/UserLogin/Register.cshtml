@model ShagunGraminHealth.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up | ShagunGraminHealth</title>
    <meta name="description" content="Sign up form for ShagunGraminHealth">
    <link rel="icon" type="image/x-icon" href="~/admin/assets/img/favicon/favicon.ico">
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/admin/assets/vendor/fonts/boxicons.css">
    <link rel="stylesheet" href="~/admin/assets/vendor/css/core.css">
    <link rel="stylesheet" href="~/admin/assets/vendor/css/theme-default.css">
    <link rel="stylesheet" href="~/admin/assets/css/demo.css">
    <link rel="stylesheet" href="~/admin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css">
    <link href="~/css/userlogin.css" rel="stylesheet" />
</head>

<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-md-7 col-lg-6">
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-md-5">
                                <img src="~/assets/assets/images/logo-img.png" alt="logo" class="card-img">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h2 class="fw-normal mb-4">Create New ShagunGraminHealth Account</h2>
                                    <form asp-action="Register" asp-controller="UserLogin" method="post">
                                        <div class="mb-3">
                                            <input type="text" name="Name" class="form-control" placeholder="Full Name" required>
                                        </div>
                                        <div class="mb-3">
                                            <input type="email" name="Email" class="form-control" placeholder="Email Address" required>
                                        </div>
                                        <div class="mb-3">
                                            <input type="password" name="Password" class="form-control" placeholder="Password" required>
                                        </div>
                                        <div class="mb-3">
                                            <input type="tel" name="Mobile" class="form-control" placeholder="Mobile Number" required>
                                        </div>
                                        <div class="mb-3">
                                            <input type="text" name="ReferenceId" class="form-control" placeholder="Reference ID (if any)">
                                        </div>
                                        <div class="mb-3">
                                            <input type="password" name="Passcode" class="form-control" placeholder="Passcode">
                                        </div>
                                        <div class="form-check checkbox-label">
                                            <input class="form-check-input" type="checkbox" value="" id="termsCheck" required>
                                            <label class="form-check-label" for="termsCheck">
                                                I agree to the <a href="#!">Terms of Use</a> and <a href="#!">Privacy Policy</a>
                                            </label>
                                        </div>
                                        <button class="btn btn-danger btn-lg btn-block mb-3" type="submit">Sign Up</button>
                                        <div class="text-muted text-center">
                                            Already have an account? <a href="UserLogin/Login">Sign In</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/admin/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/admin/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/admin/assets/vendor/js/bootstrap.js"></script>
    <script src="~/admin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script>
        function showPopup(message) {
            alert(message);
        }

        $(document).ready(function () {
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    showPopup('@TempData["SuccessMessage"]');
            </text>
        }
                        });
    </script>
</body>

</html>
